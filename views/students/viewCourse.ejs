<!-- views/allCourses.ejs -->
<style>
    /* Custom CSS styles for the table */
    .btn-edit {
        padding: 0.25rem 0.5rem;
    }
    
</style>

<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">All Courses</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
            <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
        </div>
    </div>
</div>

<div class="col py-3">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/views/index">Dashboard</a></li>
                    <li class="breadcrumb-item active">All Courses</li>
                </ol>
            </nav>
        </div>
        <div class="col text-end fw-lighter">
            <!-- Display any relevant content here, if needed -->
        </div>
    </div>
</div>



  
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Course Hours</th>
                <th>Year Works</th>
                <th>Oral Percentage</th>
                <th>Written Percentage</th>
                <th>Total</th>
                <th>Exam Hours</th>
                <th>Department</th>
                <th>Sub-Department</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% courses.forEach(course => { %>
            <tr>
                <td><%= course.name %></td>
                <td><%= course.course_hours %></td>
                <td><%= course.year_works %></td>
                <td><%= course.oral_p %></td>
                <td><%= course.written %></td>
                <td><%= course.total %></td>
                <td><%= course.exam_hours %></td>
                <td><%= course.department %></td>
                <td><%= course.subDepartment %></td>
                <td>
                    <a href="/editCourse/<%= course._id %>" class="btn btn-sm btn-outline-primary btn-edit">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<script>
    const searchForm = document.getElementById('searchForm');
    if (searchForm) {
      searchForm.style.display = 'none';
    }
  </script>