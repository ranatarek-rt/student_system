<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Editing: <%= course.name %></h1>
  </div>
  
  <div class="col py-3">
    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
            <li class="breadcrumb-item active"><%= course.name %></li>
          </ol>
        </nav>
      </div>
      <div class="col text-end fw-lighter">
        <b>Last Updated: <%= new Date(course.updatedAt).toUTCString() %></b>
        <b>CourseId:</b> <%= course._id %>
      </div>
    </div>
  </div>
  
  <form action="/editCourse/<%= course._id %>" method="POST">
    <div class="form-group mb-4">
      <label for="name">اسم المقرر</label>
      <input type="text" class="form-control" id="name" name="name" value="<%= course.name %>" placeholder="اسم المقرر" required>
    </div>
  
    <div class="row form-group mb-4">
      <div class="col">
        <label for="course_hours">عدد الساعات المعتمدة</label>
        <input type="number" class="form-control" id="course_hours" name="course_hours" value="<%= course.course_hours %>" placeholder="عدد الساعات المعتمدة" required>
      </div>
  
      <div class="col">
        <label for="year_works">أعمال السنة</label>
        <input type="number" class="form-control" id="year_works" name="year_works" value="<%= course.year_works %>" placeholder="أعمال السنة" required>
      </div>
    </div>
  
    <div class="row form-group mb-4">
      <div class="col">
        <label for="oral_p">شفوي/عملي</label>
        <input type="number" class="form-control" id="oral_p" name="oral_p" value="<%= course.oral_p %>" placeholder="شفوي/عملي" required>
      </div>
  
      <div class="col">
        <label for="written">تحريري</label>
        <input type="number" class="form-control" id="written" name="written" value="<%= course.written %>" placeholder="تحريري" required>
      </div>
    </div>
  
    <div class="form-group mb-4">
      <label for="exam_hours">ساعات الامتحان</label>
      <input type="number" class="form-control" id="exam_hours" name="exam_hours" value="<%= course.exam_hours %>" placeholder="ساعات الامتحان">
    </div>
  
    <div class="form-group mb-4">
        <label for="department">القسم</label>
        <select class="form-control" id="department" name="department" required>
          <% for (const department of departments) { %>
            <option value="<%= department %>"><%= department %></option>
          <% } %>
        </select>
      </div>
      
      <div class="form-group mb-4">
        <label for="subDepartment">الشعبة الفرعية</label>
        <select class="form-control" id="subDepartment" name="subDepartment" required>
          <option value="" disabled selected>اختر الشعبة الفرعية</option>
          <!-- Loop through the keys of subDepartments (main departments) and populate the options -->
          <% for (const mainDepartment of Object.keys(subDepartments)) { %>
            <optgroup label="<%= mainDepartment %>">
              <% const subDeps = subDepartments[mainDepartment]; %>
              <!-- Loop through the sub-departments array and populate the options -->
              <% for (const subDepartment of subDeps) { %>
                <option value="<%= subDepartment %>"><%= subDepartment %></option>
              <% } %>
            </optgroup>
          <% } %>
        </select>
      </div>
  
    <div class="form-group mb-4">
      <button type="submit" class="btn btn-primary">تحديث المقرر</button>
  
      <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">حذف المقرر</button>
    </div>
  </form>
  
  <div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <div class="modal-title">You are about to remove a course.</div>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>
            This will remove the course: <b class="fw-bold"><%= course.name %></b><br/>
            Are you sure?
          </p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
          <form action="/editCourse/<%= course._id %>?_method=DELETE" method="POST" class="position-relative">
            <button type="submit" class="btn btn-primary">نعم، حذف المقرر</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <script>
    const searchForm = document.getElementById('searchForm');
    if (searchForm) {
      searchForm.style.display = 'none';
    }
  </script>